":"In a bullet point list I wanted: ","position":{"start":{"line":7,"column":1,"offset":678},"end":{"line":7,"column":34,"offset":711},"indent":[]}}],"position":{"start":{"line":7,"column":1,"offset":678},"end":{"line":7,"column":34,"offset":711},"indent":[]}},{"type":"list","ordered":false,"start":null,"spread":false,"children":[{"type":"listItem","spread":false,"checked":null,"children":[{"type":"paragraph","children":[{"type":"text","value":"Host Blog","position":{"start":{"line":8,"column":3,"offset":714},"end":{"line":8,"column":12,"offset":723},"indent":[]}}],"position":{"start":{"line":8,"column":3,"offset":714},"end":{"line":8,"column":12,"offset":723},"indent":[]}}],"position":{"start":{"line":8,"column":1,"offset":712},"end":{"line":8,"column":12,"offset":723},"indent":[]}},{"type":"listItem","spread":false,"checked":null,"children":[{"type":"paragraph","children":[{"type":"text","value":"Host Portfolio of work","position":{"start":{"line":9,"column":3,"offset":726},"end":{"line":9,"column":25,"offset":748},"indent":[]}}],"position":{"start":{"line":9,"column":3,"offset":726},"end":{"line":9,"column":25,"offset":748},"indent":[]}}],"position":{"start":{"line":9,"column":1,"offset":724},"end":{"line":9,"column":25,"offset":748},"indent":[]}},{"type":"listItem","spread":false,"checked":null,"children":[{"type":"paragraph","children":[{"type":"text","value":"Be fast","position":{"start":{"line":10,"column":3,"offset":751},"end":{"line":10,"column":10,"offset":758},"indent":[]}}],"position":{"start":{"line":10,"column":3,"offset":751},"end":{"line":10,"column":10,"offset":758},"indent":[]}}],"position":{"start":{"line":10,"column":1,"offset":749},"end":{"line":10,"column":10,"offset":758},"indent":[]}},{"type":"listItem","spread":false,"checked":null,"children":[{"type":"paragraph","children":[{"type":"text","value":"Be responsive for mobile and desktop ","position":{"start":{"line":11,"column":3,"offset":761},"end":{"line":11,"column":40,"offset":798},"indent